<Window x:Class="SteamDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Workshop Downloader" 
        Height="650" Width="850"
        MinHeight="450" MinWidth="650"
        Background="#1E1E1E"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- Style for Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#039BE5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#29B6F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0288D1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#616161"/>
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#616161"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#039BE5"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ListBox -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#616161"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ProgressBar -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="#616161"/>
            <Setter Property="Foreground" Value="#00E5FF"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <Grid>
                                <Rectangle x:Name="PART_Indicator"
                                           HorizontalAlignment="Left"
                                           Fill="{TemplateBinding Foreground}"
                                           RadiusX="12" RadiusY="12"/>
                                <TextBlock x:Name="ProgressText"
                                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, StringFormat={}{0:F1}%}"
                                           Foreground="White"
                                           FontSize="14"
                                           FontFamily="Segoe UI"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Steam Workshop Downloader" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   FontFamily="Segoe UI"
                   Foreground="#E0E0E0" 
                   Margin="0,0,0,20"/>

        <!-- URL input -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Collection URL:" 
                       Width="120" 
                       FontSize="16" 
                       FontFamily="Segoe UI"
                       VerticalAlignment="Center" 
                       Foreground="#B0BEC5"/>
            <TextBox x:Name="CollectionUrlTextBox" 
                     Width="550" 
                     Margin="10,0,0,0" 
                     AcceptsReturn="False"
                     ToolTip="Enter the Steam Workshop collection URL"/>
        </StackPanel>

        <!-- Log output -->
        <ListBox x:Name="LogListBox" 
                 Grid.Row="2" 
                 Margin="0,0,0,20"/>

        <!-- Progress section -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock x:Name="StatusTextBlock" 
                       Text="Ready" 
                       FontSize="14" 
                       FontFamily="Segoe UI"
                       Foreground="#B0BEC5" 
                       Margin="0,0,0,5"/>
            <ProgressBar x:Name="DownloadProgressBar" 
                         Maximum="100" 
                         Value="0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OpenFolderButton" 
                    Content="Open Folder" 
                    Width="150" 
                    Margin="0,0,10,0"
                    ToolTip="Open the folder containing downloaded workshop items"
                    Click="OpenFolderButton_Click"/>
            <Button x:Name="StartButton" 
                    Content="Start Download" 
                    Width="150" 
                    Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>